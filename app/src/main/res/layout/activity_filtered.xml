<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myapplicationdev.android.msarevision.FilteredActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnR1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female only"/>

        <Button
            android:id="@+id/btnR2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female starts with Mary"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnR3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contains Jack or contains Mary"/>

    <Button
        android:id="@+id/btnR4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contains Pan and height > 1.6"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
